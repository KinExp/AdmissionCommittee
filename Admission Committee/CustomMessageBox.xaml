<Window x:Class="Admission_Committee.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Admission_Committee"
        mc:Ignorable="d"
        Title="DeleteWindow" 
        Height="150"
        Width="400"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        KeyUp="Enter_windowText">
    <Grid Background="#FF650E">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="0.3*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            

            <Label x:Name="windowLabel"
                   Style="{StaticResource basicText}"
                   FontWeight="Bold"
                   FontSize="22"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Content="Удаление"/>

            <Label x:Name="windowText"
                   Style="{StaticResource basicText}"
                   FontSize="14"
                   Foreground="White"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="5"
                   Content="Вы действительно хотите удалить эту запись?"/>

            <Button Template="{StaticResource roundedButton}"
                    x:Name="confirmButton"
                    Width="160"
                    Grid.Column="0"
                    Grid.Row="2"
                    Content="Подтвердить"
                    Click="confirmDelete_Click"/>

            <Button Template="{StaticResource roundedButton}"
                    x:Name="cancelButton"
                    Width="160"
                    Grid.Column="1"
                    Grid.Row="2"
                    Content="Отменить"
                    Click="cancelDelete_Click"/>
        </Grid>
    </Grid>
</Window>
