<Window x:Class="Admission_Committee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Admission_Committee"
        mc:Ignorable="d"
        WindowStyle="None"
        Height="800" Width="1150">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Image Source="/фон.png" Stretch="Fill">
        </Image>
        <Image Source="/рабочая область 2.png" Stretch="Fill">
        </Image>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.36*"></RowDefinition>
                <RowDefinition Height="0.5*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
                <RowDefinition Height="0.55*"></RowDefinition>
                <RowDefinition Height="0.3*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="3.8*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="0.6*"/>
                <ColumnDefinition Width="0.6*"/>
            </Grid.ColumnDefinitions>

            <Image Source="/логотип.png" Grid.Row="1" Grid.Column="1" Stretch="Uniform">
            </Image>
            <Image Source="/close.png"  Stretch="Uniform"  HorizontalAlignment="Center"
                   Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" MouseLeftButtonUp="Image_MouseLeftButtonUp">
            </Image>


            <TabControl  BorderBrush="White" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">
                <TabItem Header="Абитуренты" Style="{StaticResource TabControlCreativeStyle}">
                    Первая вкладка
                </TabItem>
                <TabItem Header="Заявления" Style="{StaticResource TabControlCreativeStyle}">
                    Вторая вкладка
                </TabItem>
                <TabItem Header="Специальности" Style="{StaticResource TabControlCreativeStyle}">
                    Третья вкладка
                </TabItem>
            </TabControl>

            <Viewbox Grid.Row="3" Grid.Column="2">
                <Grid Width="406" >
                    <Button x:Name="changeButton" Template ="{StaticResource roundedButton}"
                        Content="Изменить" Height="40" Width="150" Margin="101,0,155,0" />
                    <Button x:Name="deleteButton" Template ="{StaticResource roundedButton}"
                        Content="Удалить" Height="40" Width="150" Margin="256,0,0,0" />
                </Grid>

            </Viewbox>

        </Grid>

    </Grid>

</Window>
